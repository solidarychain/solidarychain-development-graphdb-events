{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "data"
  ],
  // prevent error `error TS5055: Cannot write file '...' because it would overwrite input file.` use include 'src', this way we prevent include dist folder
  "include": [
    "src"
  ]
}